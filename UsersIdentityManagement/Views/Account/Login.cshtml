@model LoginModel

<h3 class="bg-primary text-white m-1 p-1 text-center">User Login</h3>

<div class="m-1 p-1">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form asp-action="Login" method="post">
        <input name="returnUrl" value="@ViewBag.ReturnUrl" hidden/>
        <div class="form-group">
            <label asp-for="Email"></label>
            <div><span asp-validation-for="Email" class="text-danger"></span></div>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <div><span asp-validation-for="Password" class="text-danger"></span></div>
            <input asp-for="Password" class="form-control" />
        </div>
        <button class="btn btn-primary" type="submit">Login</button>
    </form>
</div>